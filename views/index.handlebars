{{!-- HTML and Bootstrap to create styling for the app --}}
<div class="container">
    <div class="row justify-content-center" style="padding-top: 50px; padding-bottom: 50px;">
        <div class="col text-center">
            <h1>DEVOUR-THE-BURGER</h1>
            <p>An app that lets YOU create and add burgers to the menu, and then devour them!</p>
            {{!-- Gif and link to Giphy --}}
            <img class="img.animated-gif" src="https://media.giphy.com/media/TiUiqGzH4E1A0pjmAi/giphy.gif"
                alt="Happy burger">
            <hr class="my-4">
        </div>
    </div>

    <div class="row" style="padding-top: 10px; padding-bottom: 10px;">
        <div class="col text-center">
            <h3>Menu</h3>
            {{!-- Unordered list containing Handlebars functionality for the "Menu" side of the app, and "devoured" buttons --}}
            <ul class="list-group list-group-flush">
                {{#each burgers}}
                {{#unless devoured}}
                <li class="list-group-item">
                    {{burger_name}}
                    <button type="submit" class="devouredBurger btn btn-danger" data-id="{{id}}">Devour!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col text-center">
            <h3>Devoured Burgers</h3>
            {{!-- Unordered list containing Handlebars functionality for the "Devoured" side of the app --}}
            <ul class="list-group list-group-flush">
                {{#each burgers}}
                {{#if devoured}}
                <li class="list-group-item">
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <hr>

    {{!-- Form and button to create a burger and add it to the Menu --}}
    <div class="row" style="padding-top: 10px; padding-bottom: 50px;">
        <div class="col text-center">
            <form class="create-form">
                <div class="form-group">
                    <label for="burgerName">Add a burger to the menu</label>
                    <input type="taxt" id="burgerName" name="name">
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>

</div>
